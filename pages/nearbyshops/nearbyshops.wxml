<view class="container">
  <!--tabbar-->
  <tui-tabs tabs="{{navbar}}" currentTab="{{currentTab>1?0:currentTab}}" bind:change="change" itemWidth="50%"></tui-tabs>
  <!--search-->
  <view class="tui-rolling-search">
      <icon type="search" size='13' color='#999'></icon>
      <swiper vertical="{{true}}" autoplay="{{true}}" circular="{{true}}" interval="8000" class="tui-swiper">
        <swiper-item wx:for="{{hotSearch}}" wx:key="{{index}}" class="tui-swiper-item" bindtap="search">
        <view class="tui-hot-item">{{item}}</view>
      </swiper-item>
    </swiper>
  </view>
   <!--list-->
  <view class="tui-product-list" style="margin-top:{{dropScreenH+18}}rpx">
    <view class="tui-product-container">
      <block wx:for="{{productList}}" wx:key="{{index}}">
        <template is="productItem" data="{{item,index:index}}" />
      </block>
    </view>
  </view>
  <!--list-->


  <!--模板-->
  <template name="productItem">
    <!--商品列表-->
    <view class="tui-pro-item tui-flex-list" hover-class="hover" hover-start-time="150" bindtap="detail">
      <image src="../../static/images/mall/product/{{item.img}}.jpg" class="tui-pro-img tui-proimg-list" mode="widthFix" />
      <view class="tui-pro-content">
        <view class="tui-pro-tit">{{item.name}}</view>
        <view>
          <view class="tui-pro-price">
            <text class="tui-sale-price">{{item.sale}}</text>
            <text class="tui-factory-price">{{item.factory}}</text>
          </view>
          <view class="tui-pro-pay">{{item.payNum}}</view>
        </view>
      </view>
    </view>
    <!--商品列表-->
  </template>
  <!--模板-->
</view>