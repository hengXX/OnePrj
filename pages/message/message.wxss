/* pages/message/message.wxss */

.message-box {
  background: #fff;
  width: 95%;
  margin: 20rpx auto;
}

.message-title {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 34rpx;
  color: #2e2e2e;
  position: relative;
  padding: 20rpx 20rpx;
}

.message-title-state {
  height: 16rpx;
  width: 16rpx;
  border-radius: 8rpx;
  line-height: 1;
  background: #ed3f14;
}

.message-content {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  line-height: 1;
  color: #9397a4;
  padding: 0 20rpx;
}

.message-date {
  text-align: right;
  font-size: 28rpx;
  color: #9397a4;
  padding: 15rpx 20rpx;
}
