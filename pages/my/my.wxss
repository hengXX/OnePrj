.container {
  position: relative;
}

.top-container {
  height: 440rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.bg-img {
  position: absolute;
  width: 100%;
  height: 440rpx;
  z-index: -1;
}

.user-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 102rpx;
}

.user {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 102rpx;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  align-self: center;
}

.user-info {
  margin-top: 30rpx;
  position: relative;
  font-size: 28rpx;
  color: #fefefe;
  line-height: 28rpx;
  align-self: center;
  padding: 0 35rpx;
}

.edit-img {
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  right: 0;
  bottom: -9rpx;
}

.edit-img>image {
  width: 42rpx;
  height: 42rpx;
  padding-left: 25rpx;
}

.middle-container {
  overflow: hidden;
  border-radius: 10rpx;
  background-color: #fff;
  margin: -30rpx 30rpx 26rpx 30rpx;
  box-shadow: 0 15rpx 10rpx -15rpx #efefef;
}

.middle-item {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  padding: 30rpx 0;
}

.ticket-img {
  width: 65rpx;
  height: 65rpx;
  margin-left: 65rpx;
}

.middle-tag {
  font-size: 28rpx;
  color: #666;
  line-height: 28rpx;
  font-weight: bold;
  padding-left: 22rpx;
}

.line {
  margin: 0 auto;
  width: 86%;
  height: 1px;
  background-color: #eee;
}
